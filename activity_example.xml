<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D7236"
    android:id="@+id/main"
    tools:context=".ExampleActivity">

    <ImageView
        android:id="@+id/imageViewCoin"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/money" />

    <TextView
        android:id="@+id/textViewCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="30000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCoin"
        app:layout_constraintEnd_toStartOf="@+id/imageViewCoin"
        app:layout_constraintTop_toTopOf="@+id/imageViewCoin" />

    <ImageView
        android:id="@+id/imageViewCardDeck"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46"
        app:srcCompat="@drawable/card_back" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/imageViewCardDeck"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/imageViewCardDeck"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCardDeck" />


</androidx.constraintlayout.widget.ConstraintLayout>